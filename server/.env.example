# ====== Runtime ======
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ====== Backend ======
HOST=127.0.0.1
PORT=8000

# ====== Security ======
JWT_SECRET=change_me_super_secret
JWT_EXPIRE_MIN=120

# ====== DB (вариант 1: SQLite локально) ======
DB_URL=sqlite+aiosqlite:///./keis.db

# Вариант 2 (Postgres):
# DB_URL=postgresql+asyncpg://user:pass@localhost:5432/keis

# ====== Storage ======
STORAGE_DIR=./storage

# ====== Feature Flags ======
ENABLE_ANALYTICS=true
ENABLE_PAYROLL=true
ENABLE_NOTIFICATIONS=true
ENABLE_WIDGETS=true

# ====== CORS ======
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ====== Observability / External ======
SENTRY_DSN=
OPENAI_API_KEY=
